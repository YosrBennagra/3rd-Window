# Normalize line endings for all text files
* text=auto

# Force LF line endings for Rust source files
*.rs text eol=lf
*.toml text eol=lf

# Force LF for TypeScript/JavaScript
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Force LF for config files
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Binary files
*.png binary
*.jpg binary
*.ico binary
*.woff binary
*.woff2 binary
